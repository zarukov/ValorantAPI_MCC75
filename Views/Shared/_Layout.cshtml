<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Valorant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Valorant.styles.css" asp-append-version="true" />
</head>
<body style="background-image:url('https://wallpapersmug.com/download/1600x900/81a152/valorant-game-warrior-skin.jpg');" ;>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="https://playvalorant.com/id-id/" target="_blank">
                    <img src="https://cdn2.steamgriddb.com/file/sgdb-cdn/icon/f2217062e9a397a1dca429e7d70bc6ca.ico" style="width:25px;height:25px;margin-right:30px">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ValorantMap" asp-action="Index">Map</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ValorantAgent" asp-action="Index">Agent</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black">
        <div class="container-fluid text-light">
            <a href="https://www.instagram.com/playvalorantofficial/?hl=en" target="_blank">
                <img src="https://www.edigitalagency.com.au/wp-content/uploads/new-Instagram-logo-white-glyph.png" style="width:20px;height:20px;margin-right:10px">
            </a>
            <a href="https://twitter.com/PlayVALORANT" target="_blank">
                <img src="https://iconsplace.com/wp-content/uploads/_icons/ffffff/256/png/twitter-icon-18-256.png" style=" width:20px;height:20px;margin-right:10px">
            </a>
            <a href="https://www.twitch.tv/valorant" target="_blank">
                <img src="https://cdn.logojoy.com/wp-content/uploads/2018/07/03145533/twitchicon2.png" style="width:20px;height:20px;margin-right:10px">
            </a>
            &copy; 2023 - Valorant
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ajax.js asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
